{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "bun-types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@framework": [
        "./framework/index"
      ],
      "@framework/*": [
        "./framework/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "framework/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}