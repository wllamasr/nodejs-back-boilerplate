{
  "name": "bun-elysia-boilerplate",
  "version": "1.0.0",
  "description": "Bun + Elysia boilerplate with Drizzle, Postgres, and Redis",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "test": "bun test",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg"
  },
  "dependencies": {
    "elysia": "latest",
    "drizzle-orm": "latest",
    "postgres": "latest",
    "bullmq": "latest",
    "ioredis": "latest",
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "latest",
    "pg": "latest",
    "@types/pg": "latest",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "typescript": "^5.3.3"
  }
}